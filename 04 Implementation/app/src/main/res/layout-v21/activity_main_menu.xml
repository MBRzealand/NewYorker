<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".view.MainMenu">


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:text=" NY-Builder | Udviklet af Zealand"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/button_facebook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="3dp"
            android:onClick="goToFacebook"
            android:src="@mipmap/facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/button_instagram"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="5dp"
            android:onClick="goToInstagram"
            android:src="@mipmap/instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/button_linkedin"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="6dp"
            android:onClick="goToLinkedIn"
            android:src="@mipmap/linkedin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/button_pintrest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="4dp"
            android:onClick="goToPintrest"
            android:src="@mipmap/pintrest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_opret"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:onClick="goToMainActivity"
        android:text="Ny forspÃ¸rgsel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="@+id/button_inspiration"
        app:layout_constraintStart_toStartOf="@+id/button_inspiration"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_inspiration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/orange"
        android:onClick="goToCatalogue"
        android:text="Inspiration"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_opret"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_kontakt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/orange"
        android:onClick="gotoContactActivity"
        android:text="Kontakt"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/button_inspiration"
        app:layout_constraintStart_toStartOf="@+id/button_inspiration"
        app:layout_constraintTop_toBottomOf="@+id/button_opret" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="130dp"
        android:background="#81000000"
        app:layout_constraintBottom_toTopOf="@+id/button_inspiration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@mipmap/new_yorker_icon"
        app:layout_constraintEnd_toEndOf="@+id/button_inspiration"
        app:layout_constraintStart_toStartOf="@+id/button_inspiration"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>